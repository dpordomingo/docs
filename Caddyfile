0.0.0.0:9090 {
        root /var/www/public
        log stdout
        ext .html

        redir 301 {
                if {>X-Forwarded-Proto} is http
                /  https://{host}{uri}
        }

        errors {
                404 errors/404/
                * errors/500/
        }

        rewrite /healthcheck {
                to /healthcheck
        }

        rewrite / {
                if {path} is /versions.json
                to /proxy{path}
        }

        rewrite / {
                regexp  ^/([^/]+)/README.md
                to {hostonly}/{1}/readme/ /proxy{path}
        }

        rewrite / {
                regexp  ^/([^/]+)/LICENSE
                to {hostonly}/{1}/license/ /proxy{path}
        }

        rewrite / {
                regexp  /([^/]+)/_tutorials(.*)
                to /{1}/tutorials/{2} /proxy{path}
        }

        rewrite / {
                regexp  /([^/]+)/_examples(.*)
                to /{1}/examples/{2} /proxy{path}
        }

        rewrite / {
                if {path} is /
                to /proxy/latest/
        }

        rewrite /refresh/ {
                to /proxy/
        }

        rewrite / {
                to {hostonly}{path} {hostonly}{path}/ errors/{path} /proxy{path}
        }

        proxy /proxy 127.0.0.1:9091 {
                without /proxy
                header_upstream Host {host}
                header_upstream X-Real-IP {remote}
                header_upstream X-Forwarded-For {remote}
                header_upstream X-Forwarded-Proto {>X-Forwarded-Proto}
        }
}
